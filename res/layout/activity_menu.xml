<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bg.fhdw.bfwi413a.karthago.ConfigActivity" >

    <Button
        android:id="@+id/btn_start_config"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_start_selection"
        android:layout_centerHorizontal="true"
        android:text="@string/start_config"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/buttonshape_login" />

    <Button
        android:id="@+id/btn_logout"
		android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttonshape_link"
        android:text="@string/logout"
        android:textColor="#296E87"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_start_statistics"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_start_config"
        android:layout_centerHorizontal="true"
        android:text="@string/statistics"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/buttonshape_login" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_full2" />

    <Button
        android:id="@+id/btn_start_selection"
        android:layout_marginTop="20dp"
		android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="@string/start_selection"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/buttonshape_login" />

    <TextView
        android:id="@+id/salutations1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_start_selection"
        android:layout_toLeftOf="@+id/btn_start_selection"
        android:text="@string/hello" />

    <TextView
        android:id="@+id/set_salutations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_start_selection"
        android:layout_alignLeft="@+id/btn_start_selection"
        android:text="" />

</RelativeLayout>